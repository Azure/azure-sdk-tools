{
  "name": "@ts-common/eslint-plugin-azure-sdk",
  "version": "1.0.0",
  "description": "Linting rules for the JavaScript/TypeScript Azure SDK",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "azure",
    "azure-sdk",
    "sdk",
    "eslint-plugin-azure",
    "eslint-plugin-azure-sdk"
  ],
  "author": "Microsoft Corporation",
  "contributors": [
    {
      "name": "Arpan Laha",
      "email": "arpanlaha99@gmail.com",
      "url": "https://github.com/arpanlaha"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/Azure/azure-sdk-tools/src/ts/eslint-plugin-azure-sdk",
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/azure-sdk-tools"
  },
  "bugs": {
    "url": "https://github.com/Azure/azure-sdk-tools/issues"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist/",
    "format": "prettier --write \"./**/*.{ts,json,md}\"",
    "prebuild": "npm run clean",
    "prepare": "npm test && npm run format && npm run build",
    "test": "ts-mocha -p tsconfig.json --timeout 10000 tests/**/*.ts"
  },
  "dependencies": {
    "@types/eslint": "^4.16.6",
    "@types/estree": "0.0.39",
    "typescript": "<3.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "ts-mocha": "^6.0.0"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
