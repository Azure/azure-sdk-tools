@page
@model APIViewWeb.Pages.Assemblies.ReviewModel
@{
    ViewData["Title"] = "Review";
}
<pre>@Html.Raw(Model.AssemblyModel)</pre>

<form>
    <div class="form-inline">
        <div class="form-group">
            <label for="commentThread">Line number:</label>
            <input id="commentThread" type="text" class="form-control mx-sm-3" aria-describedby="commentHelp" />
            <small id="commentHelp" class="text-muted">
                Enter a line number or click on a line label to generate a comment.
            </small>
        </div>
    </div>
    <div class="form-group">
        <label>Comment:</label>
        <textarea class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>