{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Azure SDK Team",
    "websiteUrl": "https://aka.ms/azure-sdk-qa-bot",
    "privacyUrl": "https://aka.ms/azure-sdk-qa-bot-privacy",
    "termsOfUseUrl": "https://aka.ms/azure-sdk-qa-bot-termofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "azbot-${{APP_NAME_SUFFIX}}",
    "full": "Azure SDK Q&A Bot ${{APP_NAME_SUFFIX}}"
  },
  "description": {
    "short": "A bot to help you with Azure SDK development.",
    "full": "A bot to help you with Azure SDK development."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": ["personal", "team", "groupChat"],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": []
    }
  ],
  "composeExtensions": [],
  "configurableTabs": [],
  "staticTabs": [],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": []
}
