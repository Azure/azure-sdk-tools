{
  "name": "client-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --ssl",
    "build": "ng build --output-path=../APIViewWeb/wwwroot/spa --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "playwright test --config=ui-tests/playwright.config.ts",
    "test:ui:headed": "playwright test --config=ui-tests/playwright.config.ts --headed",
    "test:ui:debug": "playwright test --config=ui-tests/playwright.config.ts --ui",
    "test:ui:report": "playwright show-report ui-tests/playwright-report",
    "test:e2e": "npm run test:ui",
    "e2e": "npm run test:ui",
    "e2e:headed": "npm run test:ui:headed",
    "e2e:debug": "npm run test:ui:debug",
    "e2e:report": "npm run test:ui:report"
  },
  "private": true,
  "engines": {
    "node": "^20.11.1 || >=22.11.0"
  },
