{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Azure SDK Team",
    "websiteUrl": "https://eng.ms/docs/products/azure-developer-experience",
    "privacyUrl": "https://eng.ms/docs/products/azure-developer-experience",
    "termsOfUseUrl": "https://eng.ms/docs/products/azure-developer-experience"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "${{TEAMS_BOT_SHORT_DISPLAY_NAME}}",
    "full": "${{TEAMS_BOT_FULL_DISPLAY_NAME}}"
  },
  "description": {
    "short": "A Teams bot for Azure SDK development",
    "full": "An AI-powered bot that provides comprehensive support throughout the SDK development lifecycle, including authoring TypeSpec, generating and releasing SDKs, and assisting with troubleshooting generation and releasing failures."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": ["team"],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": []
    }
  ],
  "composeExtensions": [],
  "configurableTabs": [],
  "staticTabs": [],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": []
}
