{
  "name": "@azure-tools/sdk-sample-generator",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run check-format && tsc -p tsconfig.genai.json",
    "build-test": "npm run build && npm test",
    "clean": "npm run clean:clones && rimraf *.tsbuildinfo",
    "clean:clones": "rimraf .artifacts",
    "clone:rest": "mkdir -p .artifacts && git clone --depth=1 --filter=blob:none --sparse https://github.com/Azure/azure-rest-api-specs.git .artifacts/azure-rest-api-specs && cd .artifacts/azure-rest-api-specs && git sparse-checkout set specification/cognitiveservices/Language.AnalyzeText",
    "clone:java": "mkdir -p .artifacts && git clone --depth=1 --filter=blob:none https://github.com/Azure/azure-sdk-for-java.git .artifacts/azure-sdk-for-java && cd .artifacts/azure-sdk-for-java/sdk/storage/azure-storage-blob",
    "clone:ts": "mkdir -p .artifacts && git clone --depth=1 --filter=blob:none https://github.com/Azure/azure-sdk-for-js.git .artifacts/azure-sdk-for-js && cd .artifacts/azure-sdk-for-js && pnpm install && cd sdk/cognitivelanguage/ai-language-text && pnpm run build && pnpm pack",
    "clone:py": "mkdir -p .artifacts && git clone --depth=1 --filter=blob:none https://github.com/Azure/azure-sdk-for-python.git .artifacts/azure-sdk-for-python && cd .artifacts/azure-sdk-for-python/sdk/textanalytics/azure-ai-textanalytics",
    "clone:go": "mkdir -p .artifacts && git clone --depth=1 --filter=blob:none https://github.com/Azure/azure-sdk-for-go.git .artifacts/azure-sdk-for-go && cd .artifacts/azure-sdk-for-go/sdk/storage/azblob",
    "check-format": "prettier --check package.json tsconfig*.json 'genaisrc/**/*.{ts,mts}' 'test/**/*.{ts,mts}' '!**/*.d.ts'",
    "format": "prettier --write package.json tsconfig*.json 'genaisrc/**/*.{ts,mts}' 'test/**/*.{ts,mts}' '!**/*.d.ts'",
    "generate": "genaiscript run generate --apply-edits --vars rest-api=.artifacts/azure-rest-api-specs/specification/cognitiveservices/Language.AnalyzeText client-api=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/review out=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/samples-dev client-dist=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/azure-ai-language-text-1.1.0.tgz client-dist-name=@azure/ai-language-text language=TypeScript",
    "generate:no-location": "genaiscript run generate --apply-edits --vars rest-api=.artifacts/azure-rest-api-specs/specification/cognitiveservices/Language.AnalyzeText client-api=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/review client-dist=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/azure-ai-language-text-1.1.0.tgz client-dist-name=@azure/ai-language-text language=TypeScript",
    "generate:no-rest": "genaiscript run generate --apply-edits --vars client-api=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/review out=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/samples-dev client-dist=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/azure-ai-language-text-1.1.0.tgz client-dist-name=@azure/ai-language-text language=TypeScript",
    "generate:interactive": "npm run generate -- interactive=true",
    "generate:basic": "genaiscript run generate --apply-edits --vars client-api=.artifacts/azure-sdk-for-js/sdk/cognitivelanguage/ai-language-text/review language=TypeScript",
    "generate:rest-only": "genaiscript run generate --apply-edits --vars rest-api=.artifacts/azure-rest-api-specs/specification/cognitiveservices/Language.AnalyzeText",
    "gen:samples": "npm run clean && npm run clone:rest && npm run clone:ts && npm run generate",
    "typecheck": "tsc -p tsconfig.genai.json",
    "test": "vitest"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^17.2.1",
    "genaiscript": "^2.3.13",
    "env-paths": "^3.0.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "memfs": "^4.25.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  }
}
