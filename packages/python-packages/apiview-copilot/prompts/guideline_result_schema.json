{
  "type": "json_schema",
  "json_schema": {
    "name": "guideline_review_result",
    "strict": true,
    "schema": {
      "type": "object",
      "properties": {
        "comments": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "rule_ids": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Unique guideline ID or IDs that were violated."
              },
              "line_no": {
                "type": "integer",
                "description": "Line number of the violation."
              },
              "bad_code": {
                "type": "string",
                "description": "the original code that was bad, cited verbatim. Should contain a single line of code."
              },
              "suggestion": {
                "type": "string",
                "description": "the suggested code which fixes the bad code. If code is not feasible, a description is fine."
              },
              "comment": {
                "type": "string",
                "description": "a comment about the violation."
              }
            },
            "required": [
              "rule_ids",
              "line_no",
              "bad_code",
              "suggestion",
              "comment"
            ]
          },
          "description": "list of comments if any"
        }
      },
      "required": ["comments"],
      "additionalProperties": false
    }
  }
}
