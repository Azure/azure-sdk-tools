@page
@model APIViewWeb.Pages.Assemblies.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Uploader</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assembly in Model.Assemblies)
        {
            <tr>
                <td>
                    <a asp-page="./Review" asp-route-id="@assembly.Id">@assembly.Name</a>
                </td>
                <td>
                    <a user-link username="@assembly.Author">@assembly.Author</a>
                </td>
                <td>
                    <span time-stamp date="@assembly.TimeStamp.ToLocalTime()"></span>
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-page="./Delete" asp-route-id="@assembly.Id">Delete</a>
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table>


