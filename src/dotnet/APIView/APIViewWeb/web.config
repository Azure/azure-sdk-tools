<configuration>
  <system.webServer>  
    <rewrite>  
        <rules>  
          <rule name="Redirect requests to default azure websites domain">
            <match url="(.*)" />  
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^apiview\.azurewebsites\.net$" />
            </conditions>
            <action type="Redirect" url="http://apiview.dev/{R:0}" />  
          </rule>
          <rule name="Redirect requests to default UI instance domain">
            <match url="(.*)" />
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^apiviewuat\.azurewebsites\.net$" />
            </conditions>
            <action type="Redirect" url="https://apiviewuxtest.com/{R:0}" />
          </rule>
          <rule name="Redirect requests to SPA">
            <match url="(.*)" />
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^v2.apiviewuxtest\.com$" />
            </conditions>
            <action type="Rewrite" url="/spa/index.html{R:0}" />
          </rule>
        </rules>  
    </rewrite>  
  </system.webServer>  
</configuration>  