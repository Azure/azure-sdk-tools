@page "{UserName?}"
@model APIViewWeb.Pages.Assemblies.ProfileModel
@using APIViewWeb.Helpers
@using APIViewWeb.Models
@{
    if(Model.User.GetGitHubLogin().Equals(Model.userProfile.UserName)) 
    {
        ViewData["Title"] = "Your profile";
    }
    else 
    {
        ViewData["Title"] = Model.userProfile.UserName;
    }
    TempData["UserPreference"] = PageModelHelpers.GetUserPreference(Model._preferenceCache, User.GetGitHubLogin()) ?? new UserPreferenceModel();

    List<string> themes = new List<string>()
    {
        "light-theme",
        "dark-theme",
        "dark-solarized-theme"
    };
    string[] Languages = { "c", "c#", "c++", "go", "java", "javascript", "python", "protocol", "swift" };
    var userPreference = (TempData["UserPreference"] as UserPreferenceModel) ?? new UserPreferenceModel();
    var theme = userPreference.Theme ?? "light-theme";
}
@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/userProfile.js")" asp-append-version="true"></script>
}
<div class="container-fluid py-2">
    @if(Model.userProfile == null) 
    {
        <h1> User profile does not exist. </h1>
    }
    else if (Model.userProfile.UserName == null || Model.userProfile.UserName.Equals(User.GetGitHubLogin()))
    {
        <div>
            @if (Model.userProfile.Email == null)
            {
                    <h3>Setup Profile</h3>
            }
            else
            {
                    <h3>Edit Profile</h3>
            }
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <div class="p-2 w-50">
                <form data-post-update="userProfile" asp-controller="UserProfile" asp-action="Update" method="post">
                    <div class="d-flex flex-column align-items-center">
                        <img username="@User.GetGitHubLogin()" class="w-25 rounded-circle my-3" style="min-width:80px; max-width:160px" aria-label="GitHub User Avatar" />
                        <h4 class="w-100 text-center"><a style="text-decoration: none;" class="text-dark" href="https://github.com/@(Model.userProfile.UserName)">@Model.userProfile.UserName</a></h4>
                    </div>
                    <hr />
                    <div class="form-group form-row">
                        <label for="Email" class="col-sm-2 font-weight-bold" style="line-height:48px"> Email </label>
                        <input name="Email" class="form-control form-control-lg col-sm-10" type="email" value="@Model.userProfile.Email" required /><br />
                    </div>
                    <div class="form-group form-row" asp-requirement="@ApproverRequirement.Instance" asp-resource="@Model">
                        <label for="Languages" class="col-sm-2 font-weight-bold" style="line-height: 38px"> Review Languages </label>
                        <select name="Languages" class="selectpicker col-sm-10 px-0" multiple>
                            @foreach (string language in Languages)
                            {
                                <option value="@language" selected="@(Model.userProfile.Languages.Contains(language) ? true : false)">@language</option>
                            }
                        </select>
                    </div>
                    <div class="form-group form-row">
                        <label for="Theme" class="col-sm-2 font-weight-bold" style="line-height: 38px"> Theme </label>
                        <select name="Theme" class="selectpicker show-tick col-sm-10 px-0" id="theme-selector" data-tick-icon="fa-solid fa-check">
                            @foreach (var item in themes)
                            {
                                var displayName = item.Replace("-theme", "");
                                if (item.Equals(theme))
                                {
                                    <option value="@item" selected>@displayName</option>
                                }
                                else
                                {
                                    <option value="@item">@displayName</option>
                                }
                            }
                        </select>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-end align-items-center">
                        <input class="btn btn-primary" type="submit" value="Save Changes" />
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div>
            <h3>View Profile</h3>
        </div>
        <hr />
        <div class="d-flex justify-content-center">
            <div class="p-2 w-50">
                <div class="d-flex flex-column align-items-center">
                    <img username="@Model.userProfile.UserName" class="w-25 rounded-circle my-3" style="min-width:80px; max-width:160px" aria-label="GitHub User Avatar" />
                    <h4 class="w-100 text-center"><a style="text-decoration: none;" class="text-dark" href="https://github.com/@(Model.userProfile.UserName)">@Model.userProfile.UserName</a></h4>
                </div>
                <hr />

                <div class="form-group form-row">
                    <label for="Email" class="col-sm-2 font-weight-bold" style="line-height:48px"> Email </label>
                    <input name="Email" class="form-control form-control-lg col-sm-10 bg-light" type="email" value="@Model.userProfile.Email" disabled /><br />
                    <label for="GitLink" class="col-sm-2 font-weight-bold" style="line-height:48px"> GitHub Link </label>
                    <a href="https://github.com/@(Model.userProfile.UserName)" target="_blank" class="form-control form-control-lg col-sm-10 bg-light">
                        @Model.userProfile.UserName's GitHub Page
                    </a>
                </div>
            </div>
        </div>
    }
    
</div>
