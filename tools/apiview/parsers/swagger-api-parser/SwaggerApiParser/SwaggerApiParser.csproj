  <ItemGroup>
      <ProjectReference Include="..\..\..\..\..\src\dotnet\APIView\APIView\APIView.csproj" />    
  </ItemGroup>
  
  <ItemGroup>
    <Compile Remove="SwaggerApiParserTest\**" />
